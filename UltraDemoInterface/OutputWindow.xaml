<Window x:Class="UltraDemoInterface.OutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OutputWindow" Height="300" Width="300" WindowStartupLocation="CenterScreen"
		WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip"
        PreviewKeyDown="Window_PreviewKeyDown" PreviewKeyUp="Window_PreviewKeyUp"
		Template="{StaticResource WindowTemplate}" ShowInTaskbar="False" Topmost="True">
    
    <Grid Background="#00000000" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
    	<RichTextBox x:Name="OutputBox" Margin="32,54,32,32" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Style="{StaticResource RichTextBoxStyle1}">
    		<FlowDocument>
                <Paragraph>
                    ddddddddddddddddddddddddddddddddddddddd
                </Paragraph>
            </FlowDocument>
    	</RichTextBox>
    	<TextBlock HorizontalAlignment="Left" Margin="32,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14.667"><Run Language="zh-cn" Text="输出"/></TextBlock>
    	   
	</Grid>
</Window>
